{
  "name": "waves-api",
  "version": "0.2.1",
  "description": "Waves client-side API library",
  "keywords": [
    "cryptocurrency",
    "waves",
    "api",
    "seed",
    "transactions",
    "cryptography",
    "signature"
  ],
  "author": {
    "name": "Phil Filippak",
    "email": "xenohunter@yandex.ru",
    "url": "https://github.com/xenohunter"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/xenohunter/waves-api.git"
  },
  "main": "raw/WavesAPI.js",
  "types": "raw/WavesAPI.d.ts",
  "devDependencies": {
    "@types/chai": "^4.0.1",
    "@types/mocha": "^2.2.41",
    "browserify": "^14.4.0",
    "chai": "^3.5.0",
    "karma": "^1.7.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-commonjs": "^1.0.0",
    "karma-mocha": "^1.3.0",
    "karma-requirejs": "^1.1.0",
    "karma-typescript": "^3.0.4",
    "mocha": "^3.2.0",
    "requirejs": "^2.3.5",
    "typescript": "^2.4.2",
    "uglify-js": "^3.0.28"
  },
  "dependencies": {
    "crypto-js": "^3.1.9-1"
  },
  "scripts": {
    "build": "npm run compile && mkdir -p dist && node_modules/.bin/browserify raw/WavesAPI.js --standalone WavesAPI | uglifyjs > ./dist/waves-api.min.js",
    "compile": "mkdir -p raw && ./node_modules/.bin/tsc -p ./tsconfig.json --declaration --outDir raw",
    "compile-inplace": "./node_modules/.bin/tsc -p ./tsconfig.json",
    "prepublishOnly": "npm run build && npm run test && npm run test-browser",
    "test": "npm run compile-inplace && ./node_modules/.bin/tsc -p ./test/tsconfig.json && ./node_modules/.bin/mocha ./test/**/",
    "test-browser": "npm run compile-inplace && ./node_modules/.bin/tsc -p ./test/tsconfig.browser.json && ./node_modules/.bin/karma start karma.conf.js"
  }
}
